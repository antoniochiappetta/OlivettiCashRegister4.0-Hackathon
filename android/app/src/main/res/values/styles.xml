<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewSmall.Bold" parent="TextViewSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewNormal" parent="TextViewSmall">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="TextViewNormal.Bold" parent="TextViewNormal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewBig" parent="TextViewNormal">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="TextViewBig.Bold" parent="TextViewBig">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PresentationTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/presentation_text_view</item>
    </style>

    <style name="PresentationTextView.Normal" parent="PresentationTextView">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="PresentationTitle" parent="PresentationTextView">
        <item name="android:textSize">@dimen/presentation_title_height</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:textSize">@dimen/very_big_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextViewWhiteText">
        <item name="android:textSize">@dimen/very_big_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewWhiteText.Small" parent="TextViewWhiteText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextViewBlackText">
        <item name="android:textSize">@dimen/very_big_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewBlackText.Bold" parent="TextViewBlackText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/very_big_text_size</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>

</resources>
