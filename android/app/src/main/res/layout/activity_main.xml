<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="3"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/insertProductFragment"
        android:name="it.tim.innovation.jolmilano.cr40devapp.fragments.InsertProductFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/listProductFragment"
        android:name="it.tim.innovation.jolmilano.cr40devapp.fragments.ProductsListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/transactionsFragment"
        android:name="it.tim.innovation.jolmilano.cr40devapp.fragments.TransactionFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>